@model BOL.CallNote

@{
	ViewBag.Title = "Delete";
	ViewBag.CustomerId = Model.customer_id;
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this and all call notes under it?</h3>
<div>
    <h4>CallNote</h4>
    <hr />
	<dl class="dl-horizontal">

		<dt>
			@Html.DisplayNameFor(model => model.Customer.username)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Customer.username)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.text_content)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.text_content)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.date_created)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.date_created)
		</dd>

	</dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Call Notes Information", "Index", new { customerId = ViewBag.CustomerId })
        </div>
    }
</div>
